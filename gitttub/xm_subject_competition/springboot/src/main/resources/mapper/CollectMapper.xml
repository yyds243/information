<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.CollectMapper">

    <select id="selectAll" resultType="com.example.entity.Collect">
        select collect.*, user.name as userName, event.name as eventName, event.img as eventImg from `collect`
        left join user on collect.user_id = user.id
        left join event on collect.event_id = event.id
        <where>
            <if test="userId != null"> and collect.user_id = #{userId}</if>
            <if test="eventName != null"> and event.name like concat('%', #{eventName}, '%')</if>
        </where>
        order by collect.id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Collect">
        select * from `collect`
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from `collect`
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Collect" useGeneratedKeys="true" keyProperty="id">
        insert into `collect`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="eventId != null">event_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="time != null">time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="eventId != null">#{eventId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="time != null">#{time},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Collect">
        update `collect`
        <set>
            <if test="eventId != null">
                event_id = #{eventId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>